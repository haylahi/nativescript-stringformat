<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <Page.actionBar>
    <ActionBar title="nativescript-stringformat Demo">
    </ActionBar>
  </Page.actionBar>
  
  <TabView>
   <TabView.items>
     <TabViewItem title="format()">
       <TabViewItem.view>
          <ListView items="{{ items }}">
            <ListView.itemTemplate>
              <StackLayout>
                <Label text="{{ description }}" />
                <Label text="{{ result }}" />
              </StackLayout>
            </ListView.itemTemplate>
          </ListView>
       </TabViewItem.view>
     </TabViewItem>

     <TabViewItem title="StringBuilder">
       <TabViewItem.view>
          <Label text="{{ stringBuilderResult }}"
                 textWrap="true" />
       </TabViewItem.view>
     </TabViewItem>
   </TabView.items>
 </TabView>

</Page>